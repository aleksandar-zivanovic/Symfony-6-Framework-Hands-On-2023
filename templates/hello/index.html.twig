{% extends "base.html.twig" %}

{% block body %}
	{% if messages|length > 0 %}
		{% for key, message in messages|slice(0, limit) %}
			<div>
				<a href='{{ path('app_show_one', {id: key}) }}'>{{ message.message }}</a>
			</div>
			{{ include ("hello/_message.html.twig", {poruka: message}) }}
		{% endfor %}
	{% else %}
		<div>There is nothing here yet!</div>
	{% endif %}
{% endblock %}


{% block title %}I've changed a title!
{% endblock %}
